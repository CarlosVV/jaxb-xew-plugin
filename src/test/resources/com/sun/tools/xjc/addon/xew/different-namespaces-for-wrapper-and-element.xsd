<?xml version="1.0" encoding="UTF-8"?>
<xs:schema
	jaxb:version="2.0"
	targetNamespace="http://example.com/composed"
	xmlns:ns1="http://example.com/composed"
	xmlns:ns2="http://example.com/entry"
	xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
>
	<xs:annotation>
		<xs:appinfo>
			<jaxb:schemaBindings>
				<jaxb:package name="different_namespaces" />
			</jaxb:schemaBindings>
		</xs:appinfo>
	</xs:annotation>

	<xs:import schemaLocation="different-namespaces-helper.xsd" namespace="http://example.com/entry" />

	<xs:element name="composed">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="ns1:entries" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="entries">
		<xs:complexType>
			<xs:sequence>
				<!--
					Important is that the namespace for this collection element is correctly reflected in @XmlElement.
				-->
				<xs:element ref="ns2:entry" maxOccurs="unbounded" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
